@using Sandbox;
@using Sandbox.UI;

@namespace GameJam
@inherits Panel

<style>
	RaidingHUD {
		position: absolute;
		left: 0px;
		top: 0px;
		width: 100%;
		height: 100%;
	}
</style>

<root>
    <LoadingScreen @ref=Loading></LoadingScreen>
</root>

@code {
    public LoadingScreen Loading { get; set; }

    [Event("FinishedLoadingMap")]
    public void GetFinished()
    {
        Loading.Delete();
    }

    protected override int BuildHash()
    {
        return Time.Now.GetHashCode();
    }
}
