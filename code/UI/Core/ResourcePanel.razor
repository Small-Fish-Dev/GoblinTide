@using Sandbox.UI;
@using GameJam.UI.Core;
@using System.Globalization;

@namespace GameJam
@inherits Panel

<style>
    ResourcePanel { 
        position: relative;
        background-color: #2c2825cc;
        box-shadow: 0px 0px 45px #00000096;
        margin: 5px;
        width: 96px;
        height: 96px;
        backdrop-filter: blur(8px);
		border: 4px #2c2825cc;
    }
    
	.text {
		position: absolute;
		bottom: -10px;
		right: -20px;
		padding: 5px;
		height: 35px;
		flex-shrink: 0;
		transform-origin: center;

		.shadow {
			position: absolute;
			margin-left: 8px;
			margin-top: 8px;
		}
	}

    img {
        top: 50%;
        left: 50%;
        width: 78px;
        height: 78px;
        transform: translate(-50% -50%);
    }
</style>

<root>
    <img src=@($"ui/resources/{ResourceName.ToLower()}.png") />
	<panel class="text">
        @{
			<WiggleText Scale="@(0.32f)" Tint=@Color.Black class="shadow" Value="@(ResourceAmount)" />
			<WiggleText Scale="@(0.32f)" Value="@(ResourceAmount)" />
		}
	</panel>
</root>

@code {
    public string ResourceName { get; set; }
    public string ResourceAmount { get; set; }

    TimeUntil nextWobble;

	public void OnValueChange( string newValue )
	{
		ResourceAmount = newValue;
		DeleteChildren( true );
		StateHasChanged();
	}

	public override void Tick()
	{
		if ( !nextWobble )
			return;

		nextWobble = Game.Random.Float( 0.5f, 1f );
		Style.Set( "transform", $"rotate({Game.Random.Int( -3, 3 )})" );
	}
}
